<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@android:color/white"
    android:elevation="2dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/hsKunjunganNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/hsKunjunganPasien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="nama Pasien"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/hsKunjungankamar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kamar Pasien"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/hsKunjunganTgl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal Kunjungan :"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/hsKunjunganjam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jam Kunjungan"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/hsKunjunganStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/hsKunjunganKet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keterangan :"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />
</LinearLayout>
